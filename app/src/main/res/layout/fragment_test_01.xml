<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4425"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_fragment_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="I am fragment 01"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_fragment_01"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#5345"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_01"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_fragment_01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5345"
        app:layout_constraintStart_toStartOf="@+id/tl_fragment_01"
        app:layout_constraintEnd_toEndOf="@+id/tl_fragment_01"
        app:layout_constraintTop_toBottomOf="@+id/tl_fragment_01"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>